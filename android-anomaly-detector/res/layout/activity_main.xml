<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Детектор аномалий перемещения"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:gravity="center"
        android:padding="16dp"
        android:background="#fff"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Статус: Инициализация..."
        android:textSize="16sp"
        android:textColor="#666"
        android:padding="12dp"
        android:background="#fff"
        android:layout_marginBottom="16dp"
        android:elevation="1dp" />

    <TextView
        android:id="@+id/statsText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Статистика загружается..."
        android:textSize="14sp"
        android:textColor="#555"
        android:padding="12dp"
        android:background="#fff"
        android:layout_marginBottom="16dp"
        android:fontFamily="monospace"
        android:elevation="1dp" />

    <Button
        android:id="@+id/startTestButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запустить тестовый сценарий"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#fff" />

    <Button
        android:id="@+id/showSessionsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Показать активные сессии"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#2196F3"
        android:textColor="#fff" />

    <Button
        android:id="@+id/clearDataButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Очистить все данные"
        android:textSize="16sp"
        android:backgroundTint="#F44336"
        android:textColor="#fff" />

</LinearLayout>
