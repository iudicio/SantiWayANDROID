<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.santiway"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- ========== ВСЕ uses-permission и uses-feature ДОЛЖНЫ БЫТЬ ЗДЕСЬ ========== -->

    <!-- Базовые сетевые -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Wi-Fi -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <!-- Bluetooth (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- Локация -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Фоновое сканирование (если нужно) -->
    <!--<uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />-->

    <!-- Фоновые сервисы -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Уведомления (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- READ_PHONE_STATE - если используется для сотовых сетей -->
    <!--<uses-permission android:name="android.permission.READ_PHONE_STATE" />-->

    <!-- Для карт -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Декларация использования Bluetooth для старых версий Android -->
    <uses-feature android:name="android.hardware.bluetooth" android:required="false" />
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false" />

    <!-- Декларация для локации -->
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />
    <uses-feature android:name="android.hardware.location.network" android:required="false" />

    <!-- ========== ЗДЕСЬ НАЧИНАЕТСЯ application ========== -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SantiWay"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCC403LVvNftLfazMl7fXVUNxi1rBnCQAA"/>

        <!-- Активности -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".NotificationsActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.SantiWay" />

        <activity
            android:name=".NotificationDetailActivity"
            android:parentActivityName=".NotificationsActivity"
            android:theme="@style/Theme.SantiWay" />

        <activity
            android:name=".DeviceListActivity"
            android:exported="false" />

        <activity
            android:name=".DatabaseViewActivity"
            android:exported="false" />

        <activity android:name=".AppConfigViewActivity"
            android:exported="false" />

        <activity
            android:name=".activity_map.ActivityMapActivity"
            android:screenOrientation="portrait" />

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Сервисы сканирования -->
        <service
            android:name=".wifi_scanner.WifiForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"/>

        <service
            android:name=".cell_scanner.CellForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"/>

        <service
            android:name=".bluetooth_scanner.BluetoothForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"/>

        <!-- Сервисы загрузки -->
        <service
            android:name=".upload_data.DeviceUploadService"
            android:enabled="true"
            android:exported="false" />

    </application>

</manifest>